{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "esbuild",
      "better-sqlite3"
    ]
  },
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=512' tsx watch src/index.ts",
    "build": "prisma generate && prisma db push --accept-data-loss && tsc",
    "start": "node dist/index.js",
    "prisma:generate": "./node_modules/.bin/prisma generate",
    "prisma:migrate": "./node_modules/.bin/prisma migrate dev",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:deploy": "./node_modules/.bin/prisma generate && ./node_modules/.bin/prisma db push --accept-data-loss",
    "prisma:validate": "./node_modules/.bin/prisma validate",
    "db:ping": "tsx scripts/db-ping.ts",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d postgres",
    "smoke:orders": "tsx scripts/smoke-orders.ts",
    "smoke:invoices": "tsx scripts/smoke-invoices.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
